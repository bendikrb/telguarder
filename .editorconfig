root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4

[*.py]
ij_python_call_parameters_new_line_after_left_paren = false

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[{*.yaml,*.yml}]
indent_size = 2
max_line_length = 115
